                <?php $posts = get_posts('numberposts=5&order=ASC&orderby=post_title');
                foreach ($posts as $post) : setup_postdata( $post );
                switch (array_search($post, $posts)) {
                    case 0:
                        echo "<div class='col-sm-6 blog-item-1'>";
                        echo "<h4>".the_date()."</h4><br>";
